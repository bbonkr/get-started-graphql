{
  "verbose": true,
  "watch": ["graphql/", "index.js", "nodemon.json"],
  "ignore": [".git", "node_modules"],
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "exec": "babel-node index.js",
  "ext": "js, json, graphql",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 200
}
